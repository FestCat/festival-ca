outdir="$1"
shift
dialect="$1"
shift
infile=$@

mkdir -p "$outdir"

FESTIVAL="@FESTIVALBIN@"

cat $infile | ./allo2pho.pl "${dialect}" | \
   perl -pe 's/^ +//; s/ +$//; s/  +/ /g; s/ *\t */\t/g' |\
   LC_ALL=POSIX sort -u | ./list2festival.pl > "$outdir/upcdict_catalan.scm" || exit 1


# Syllabification is already done in list2festival.pl. We must set the
# lex_syllabification variable to "NONE" to avoid extra syllabification
# rules being applied from other languages (e.g. cmulex).
$FESTIVAL -b "(unwind-protect 
  (begin
    (set! lex_syllabification \"NONE\") 
    (lex.compile \"$outdir/upcdict_catalan.scm\" \"$outdir/upcdict_catalan.out\")
  )
  (exit 1)
)" || exit 1


